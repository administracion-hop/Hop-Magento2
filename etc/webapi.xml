<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/improntus/hop_points/:zipCode" method="GET">
        <service class="Hop\Envios\Api\PointsInterface" method="get"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/improntus/hop_estimate" method="GET">
        <service class="Hop\Envios\Api\PointsInterface" method="estimate"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/hop-envios/notifications" method="POST">
        <service class="Hop\Envios\Api\WebhookManagementInterface" method="processNotification"/>
        <resources>
            <resource ref="Hop_Envios::webhook_notifications"/>
        </resources>
    </route>
</routes>
